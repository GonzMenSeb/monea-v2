{
  "expo": {
    "name": "Monea",
    "slug": "monea",
    "version": "1.0.0",
    "scheme": "monea",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "platforms": ["android"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0B0E"
    },
    "android": {
      "package": "com.monea.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0B0E"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_SMS",
        "android.permission.RECEIVE_SMS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "monea"
            },
            {
              "scheme": "https",
              "host": "monea.app",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      "expo-router",
      ["@lovesworking/watermelondb-expo-plugin-sdk-52-plus"],
      "@config-plugins/detox",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 34,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "packagingOptions": {
              "pickFirst": ["**/libc++_shared.so"]
            }
          }
        }
      ],
      "./plugins/withGradleOptimizations.js",
      "./plugins/withSmsReader.js"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
